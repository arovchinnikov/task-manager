{
    "type": "project",
    "autoload": {
        "psr-4": {
            "Core\\": "common/core",
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests",
            "Migrations\\": "migrations"
        }
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "ext-pdo": "*",
        "symfony/dotenv": "6.0.5"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.18",
        "squizlabs/php_codesniffer": "3.6.2",
        "doctrine/migrations": "3.4.1"
    }
}
